{
  "scripts": {
    "builddb": "ts-node db_builder/type_orm_create_schema.ts",
    "buildserver": "tsc -p ./packages/tsconfig.json",
    "buildclient": "tsc -p ./client_packages/tsconfig.json",
    "build": "npm run buildserver | npm run buildclient"
  },
  "devDependencies": {
    "@ragempcommunity/types-client": "^2.1.3",
    "@ragempcommunity/types-server": "^2.1.1",
    "@swc/core": "^1.2.118",
    "@swc/helpers": "^0.4.12",
    "@types/node": "^18.8.4",
    "prettier": "^2.7.1",
    "typescript": "^4.8.4"
  },
  "prettier": {
    "$schema": "http://json.schemastore.org/prettierrc",
    "endOfLine": "lf",
    "printWidth": 150,
    "quoteProps": "as-needed",
    "semi": true,
    "singleQuote": true,
    "tabWidth": 4,
    "trailingComma": "none",
    "useTabs": true,
    "overrides": [
      {
        "files": "*.yml",
        "options": {
          "tabWidth": 2,
          "useTabs": false
        }
      }
    ]
  },
  "dependencies": {
    "colorette": "^2.0.19",
    "pg": "^8.8.0",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.3.10"
  }
}
